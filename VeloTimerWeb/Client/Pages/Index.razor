@page "/"
@using System.Globalization
@using VeloTimer.Shared.Util

<MudContainer>
<MudGrid>
    <MudItem xs="12">
        <ActiveTransponderCount FromTime=DateTimeOffset.Now.AddMinutes(-30) />
    </MudItem>

    <AuthorizeView>
        <Authorized>
            <MudItem xs="12">
                <ActiveRiders FromTime=DateTimeOffset.Now.AddMinutes(-30) />
            </MudItem>
        </Authorized>
    </AuthorizeView>

    <MudItem xs="12">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6" Class="d-block">Tider å slå denne måneden</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudElement Class="d-block"><FastestSegmentTime FromTime=DateTimeUtils.StartOfMonth(DateTimeOffset.Now) Label=Runde ShowIntermediate=false /></MudElement>
                <MudElement Class="d-block"><FastestSegmentTime FromTime=DateTimeUtils.StartOfMonth(DateTimeOffset.Now) Label=200m ShowIntermediate=false /></MudElement>
                <MudElement Class="d-block"><FastestSegmentTime FromTime=DateTimeUtils.StartOfMonth(DateTimeOffset.Now) Label=1000m ShowIntermediate=false /></MudElement>
                <MudElement Class="d-block"><FastestSegmentTime FromTime=DateTimeUtils.StartOfMonth(DateTimeOffset.Now) Label=3000m ShowIntermediate=false /></MudElement>
                <MudElement Class="d-block"><FastestSegmentTime FromTime=DateTimeUtils.StartOfMonth(DateTimeOffset.Now) Label=4000m ShowIntermediate=false /></MudElement>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6" Class="d-block">Beste tider forrige måned</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudElement Class="d-block"><FastestSegmentTime FromTime=DateTimeUtils.StartOfMonth(DateTimeOffset.Now.AddMonths(-1)) ToTime=DateTimeUtils.EndOfMonth(DateTimeOffset.Now.AddMonths(-1)) Label=Runde ShowIntermediate=false /></MudElement>
                <MudElement Class="d-block"><FastestSegmentTime FromTime=DateTimeUtils.StartOfMonth(DateTimeOffset.Now.AddMonths(-1)) ToTime=DateTimeUtils.EndOfMonth(DateTimeOffset.Now.AddMonths(-1)) Label=200m ShowIntermediate=false /></MudElement>
                <MudElement Class="d-block"><FastestSegmentTime FromTime=DateTimeUtils.StartOfMonth(DateTimeOffset.Now.AddMonths(-1)) ToTime=DateTimeUtils.EndOfMonth(DateTimeOffset.Now.AddMonths(-1)) Label=1000m ShowIntermediate=false /></MudElement>
                <MudElement Class="d-block"><FastestSegmentTime FromTime=DateTimeUtils.StartOfMonth(DateTimeOffset.Now.AddMonths(-1)) ToTime=DateTimeUtils.EndOfMonth(DateTimeOffset.Now.AddMonths(-1)) Label=3000m ShowIntermediate=false /></MudElement>
                <MudElement Class="d-block"><FastestSegmentTime FromTime=DateTimeUtils.StartOfMonth(DateTimeOffset.Now.AddMonths(-1)) ToTime=DateTimeUtils.EndOfMonth(DateTimeOffset.Now.AddMonths(-1)) Label=4000m ShowIntermediate=false /></MudElement>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
</MudContainer>