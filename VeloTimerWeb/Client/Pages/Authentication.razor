@page "/authentication/{action}"
@using VeloTimerWeb.Client.Components
@using VeloTimerWeb.Client.Shared
@inject IApiClient Api
@inject AuthenticationStateProvider authStatProvider

<CustomRemoteAuthenticatorView Action="@Action">
    <LoggingIn>
        <MudContainer>
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" Size="Size.Large"/>
        </MudContainer>
    </LoggingIn>
    <LogOut>
        <MudContainer>
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" Size="Size.Large"/>
        </MudContainer>
    </LogOut>
    <CompletingLoggingIn>
        <MudContainer>
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" Size="Size.Large"/>
        </MudContainer>
    </CompletingLoggingIn>
    <CompletingLogOut>
        <MudContainer>
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" Size="Size.Large"/>
        </MudContainer>
    </CompletingLogOut>
</CustomRemoteAuthenticatorView>


@code{
    [Parameter] public string Action { get; set; }
}
